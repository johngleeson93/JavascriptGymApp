
<header class="ui center aligned header">
${member.firstname}'s assessment list
</header>
<section class="ui segment">
    <section class="ui segment">
        <div class="ui equal width grid">
            <div class="column">
                <i class="user icon huge"></i>
                <h3>${member.firstname} ${member.lastname}</h3>
            </div>
            <div class="column">
                <i class="heartbeat icon huge"></i>
                Current BMI: <h3> ${bmi} </h3>
            </div>
            <div class="column">
                <i class="clipboard icon huge"></i>
                <h3>${getCategory}</h3>
            </div>
        </div>
        <form class="ui form" action="/dashboard/addAssessment" method="POST">
            <div class="three fields">
                <div class="field">
                    <label>Weight</label>
                    <input placeholder="00.00kg" type="text" name="weight">
                </div>
                <div class="field">
                    <label>Chest</label>
                    <input placeholder="00.00cm" type="text" name="chest">
                </div>
                <div class="field">
                    <label>Thigh</label>
                    <input placeholder="00.00cm" type="text" name="thigh">
                </div>
            </div>
            <div class="three fields">
                <div class="field">
                    <label>Upper Arm</label>
                    <input placeholder="00.00cm" type="text" name="upperArm">
                </div>
                <div class="field">
                    <label>Waist</label>
                    <input placeholder="00.00cm" type="text" name="waist">
                </div>
                <div class="field">
                    <label>Hips</label>
                    <input placeholder="00.00cm" type="text" name="hips">
                </div>
            </div>
            <button class="ui blue submit button">Add Assessment</button>
        </form>
        </div>
    </section>
</section>

<section class="ui segment">
    <table class="ui celled table">
        <thead>
        <tr>
            <th>Weight (kg)</th>
            <th>Chest (cm)</th>
            <th>Thigh (cm)</th>
            <th>Upper Arm (cm)</th>
            <th>Waist (cm)</th>
            <th>Hips (cm)</th>
        </tr>
        </thead>
        <tbody>
        #{list items: assessmentlist, as:'assessment'}
        <tr>
            <td>
            ${assessment.weight}
            </td>
            <td>
            ${assessment.chest}
            </td>
            <td>
            ${assessment.thigh}
            </td>
            <td>
            ${assessment.upperArm}
            </td>
            <td>
            ${assessment.waist}
            </td>
            <td>
            ${assessment.hips}
            </td>
        </tr>
        #{/list}
        </tbody>
    </table>
</section>
</section>
